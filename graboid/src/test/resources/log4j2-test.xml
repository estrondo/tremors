<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

  <Appenders>
    <File name="LogFile" fileName="target/test.log" append="false">
      <PatternLayout pattern="%d %-5level [%t] %logger{36} - %msg%n" />
    </File>
  </Appenders>

  <Loggers>
    <Logger name="com.github.dockerjava" level="off" />
    <Logger name="org.testcontainers" level="off" />
    <Logger name="org.apache.kafka" level="error" />
    <Logger name="io.netty" level="off" />
    <Logger name="com.arangodb" level="error" />
    <Root level="debug">
      <AppenderRef ref="LogFile" />
    </Root>
  </Loggers>
</Configuration>