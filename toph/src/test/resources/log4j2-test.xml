<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

  <Appenders>
    <Console name="Out" target="SYSTEM_ERR">
      <PatternLayout>
        <Pattern>%d{ISO8601} [%p] [%t] [%X] [%c] %m%n</Pattern>
      </PatternLayout>>
    </Console>
  </Appenders>

  <Loggers>
    <Logger name="com.github.dockerjava" level="off" />
    <Logger name="org.testcontainers" level="off" />
    <Logger name="org.apache.kafka" level="error" />
    <Logger name="io.netty" level="off" />
    <Logger name="com.arangodb" level="error" />
    <Root level="debug">
      <AppenderRef ref="Out" />
    </Root>
  </Loggers>
</Configuration>